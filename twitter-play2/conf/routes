# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET  /                           controllers.LoginoutController.index
POST /login                      controllers.LoginoutController.login
GET  /logout                     controllers.LoginoutController.logout

GET  /signup                     controllers.LoginoutController.signup
POST /create                     controllers.LoginoutController.create

## An example controller showing how to write asynchronous code
#GET     /message                    controllers.AsyncController.message
#
## Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

# Mapping to /user/list
GET     /user/list                  controllers.UserController.list
## Mapping to /user/edit or /user/edit?id=<number>
#GET     /user/edit                  controllers.UserController.edit(memberId: Option[Int] ?= None)
## Mapping to /user/create
#POST    /user/create                controllers.UserController.create
## Mapping to /user/update
#POST    /user/update                controllers.UserController.update
## Mapping to /user/remove/<number>
#POST    /user/remove/:memberId            controllers.UserController.remove(memberId: Int)
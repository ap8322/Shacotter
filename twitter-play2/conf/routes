# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET  /                           controllers.AuthController.index
POST /login                      controllers.AuthController.login
GET  /logout                     controllers.AuthController.logout

GET  /signup                     controllers.AuthController.signup
POST /create                     controllers.MemberController.create

GET  /edit                       controllers.MemberController.edit
POST /edit                       controllers.MemberController.update

GET  /tweet                      controllers.TweetController.index
POST /tweet                      controllers.TweetController.tweet
GET  /timeline                   controllers.TweetController.timeline

GET  /follow/:memberId           controllers.FollowController.follow(memberId: Int)
GET  /follower                   controllers.FollowController.followerlist

GET     /user/list               controllers.FollowController.list

## Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

## An example controller showing how to write asynchronous code
#GET     /message                    sample.AsyncController.message
#

## Mapping to /user/edit or /user/edit?id=<number>

#GET     /user/edit                  controllers.UserController.edit(memberId: Option[Int] ?= None)
## Mapping to /user/create
#POST    /user/create                controllers.UserController.create
## Mapping to /user/update
#POST    /user/update                controllers.UserController.update
## Mapping to /user/remove/<number>
#POST    /user/remove/:memberId            controllers.UserController.remove(memberId: Int)